<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/body_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/body_white"
            android:padding="10dip"
            android:layout_marginTop="30dip"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/img_thumb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_margin="8dp"
                    android:src="@drawable/thumb_ico" />

                <TextView
                    android:id="@+id/txt_arrow4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:layout_toRightOf="@id/img_thumb"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:text="Recommendables"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:src="@drawable/recomm_arrow_ico" />

            </RelativeLayout>
            <!--next layout-->
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll2"
                android:layout_centerInParent="true"
                android:layout_margin="4dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_portfolio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/portfolio_summery_ico" />

                <TextView
                    android:id="@+id/txt_portfolio"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="Portfolio summery"
                    android:textColor="#000000" android:textStyle="bold"
                    android:textSize="20dp" />


            </LinearLayout>


            <!--next layout-->

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll3"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="12dip"
                android:layout_marginBottom="12dip"
                android:background="@color/body_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_product"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="Product"
                    android:textColor="@color/black"

                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/txt_policy"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"

                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="Police No"
                    android:textColor="@color/black"

                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_acno"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="Account No"
                    android:textColor="@color/black"

                    android:textSize="14dp" />


            </LinearLayout>


            <!--next layout-->

            <LinearLayout
                android:id="@+id/ll5"  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll4" android:background="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="14dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:id="@+id/txt2_penson"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Pension"
                        android:textColor="@color/red"

                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/txt2_d21"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"

                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="1254316"
                        android:textColor="@color/black"

                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt2_d31"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="$200"
                        android:textColor="@color/black"

                        android:textSize="14dp" />


                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp" android:background="@color/gray_light"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:id="@+id/txt2_insurance"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Insurance"

                        android:textColor="@color/red"

                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/txt2_d22"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"

                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="1254316"
                        android:textColor="@color/black"

                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt2_d32"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="$300"
                        android:textColor="@color/black"

                        android:textSize="14dp" />


                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp" android:background="@color/gray_light"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:id="@+id/txt2_penson2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Pension"
                        android:textColor="@color/red"

                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/txt2_d23"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"

                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="1254316"
                        android:textColor="@color/black"

                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt2_d33"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="$499"
                        android:textColor="@color/black"

                        android:textSize="14dp" />


                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp" android:background="@color/gray_light"></View>


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dip"
                    android:layout_marginBottom="20dip"
                    android:layout_height="250dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll5"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_portfolio1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/pension_pot_ico" />

                <TextView
                    android:id="@+id/txt_penson"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="Pension Pot Adequate"
                    android:textColor="#000000" android:textStyle="bold"
                    android:textSize="20dp" />


            </LinearLayout>


            <RelativeLayout android:layout_below="@+id/ll6"

                android:layout_marginLeft="20dp" android:background="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent" android:id="@+id/llchart11"
                android:layout_height="200dp" >

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dip"
                    android:layout_marginBottom="20dip"
                    />

                <SeekBar
                    android:id="@+id/seekBar21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="8dp"
                    android:layout_toLeftOf="@+id/tvYMax"
                    android:layout_marginRight="5dp"
                    android:max="200"
                    android:visibility="gone"
                    android:paddingBottom="12dp" />

                <SeekBar
                    android:id="@+id/seekBar11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="35dp"
                    android:layout_toLeftOf="@+id/tvXMax"
                    android:layout_marginRight="5dp"
                    android:max="1500"
                    android:visibility="gone"
                    android:paddingBottom="12dp" />

                <TextView
                    android:id="@+id/tvXMax"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="500"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/tvYMax"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="500"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>







            <ImageView
                android:id="@+id/img_button" android:layout_below="@+id/llchart11"
                android:layout_width="50dp"
                android:layout_height="50dp" android:layout_alignParentRight="true"

                android:visibility="gone"
                android:layout_marginRight="30dp"
                android:src="@drawable/connect_chat_ico" />



        </RelativeLayout>




    </ScrollView>
</android.support.v4.widget.NestedScrollView>